<Window x:Class="TerrariViewer.UI.UpdateWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="300" Width="300" ResizeMode="NoResize" ShowInTaskbar="False" SizeToContent="WidthAndHeight" Topmost="True">
    <StackPanel Margin="5">
        <TextBlock>An update for TerrariViewer is available</TextBlock>
        <TextBlock>For more info:  
            <Hyperlink NavigateUri="http://terrariviewer.codeplex.com/">http://terrariviewer.codeplex.com/</Hyperlink>
        </TextBlock>
        <TextBlock>Would you like to download the latest version?</TextBlock>
        <Button Name="yesButton" Margin="5" Height="25" Click="yesButton_Click">Yes</Button>
        <Button Name="noButton" Margin="5" Height="25" Click="noButton_Click">No</Button>
    </StackPanel>
</Window>
